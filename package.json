{
  "name": "my-v0-project",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "(npm run cpd-check || echo '⚠️  WARNING: Code duplication detected. Check output/reports/jscpd/ for details.') && npm run knip && next build",
    "build:production": "NEXT_PUBLIC_CONVERSATION_ID=chat-minimal-conversation-1 npm run cpd-check && next build",
    "start": "next start",
    "lint": "next lint && eslint . --ext .ts,.tsx,.js,.jsx",
    "knip": "knip  --no-config-hints",
    "knip:strict": "knip  --no-config-hints --strict --max-issues 0",
    "cpd-check": "node --input-type=module -e \"import {PROJECT_PATHS} from './project.config.mjs'; import {execSync} from 'child_process'; execSync('jscpd --config .jscpd.json ' + PROJECT_PATHS.sourceString, {stdio: 'inherit'})\"",
    "cpd-report": "node --input-type=module -e \"import {PROJECT_PATHS} from './project.config.mjs'; import {execSync} from 'child_process'; execSync('jscpd --config .jscpd.json ' + PROJECT_PATHS.sourceString, {stdio: 'inherit'})\"",
    "migrate:neon": "tsx scripts/migrate-to-neon.ts",
    "serve": "firebase serve --only hosting",
    "build:serve": "rm -rf out && npm run build && npm run serve"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-slot": "^1.0.2",
    "@vercel/blob": "^2.0.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "drizzle-orm": "^0.44.7",
    "firebase": "^12.3.0",
    "firebaseui": "^6.1.0",
    "idb": "^8.0.3",
    "lucide-react": "^0.454.0",
    "next": "^14.2.33",
    "react": "^19",
    "react-dom": "^19",
    "sonner": "^1.5.1",
    "tailwind-merge": "^2.2.2"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "^22",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.6",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.5.3",
    "eslint-plugin-local-rules": "^3.0.2",
    "eslint-plugin-sonarjs": "^3.0.5",
    "firebase-admin": "^12.0.0",
    "jscpd": "^4.0.5",
    "knip": "^5.66.3",
    "postcss": "^8.5",
    "postcss-load-config": "^4.0.1",
    "tailwindcss": "^4.1.9",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.20.6",
    "typescript": "^5"
  }
}
