rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAllowedUser() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/allowed_users/$(request.auth.token.email));
    }

    // 許可リスト（管理者のみ読み取り可能）
    match /allowed_users/{email} {
      allow read: if isAllowedUser();
      allow write: if false; // 管理スクリプトからのみ変更可能
    }

    // 会話データへのアクセス許可（許可リストに登録されたユーザーのみ）
    match /conversations/{conversationId} {
      allow read, write: if isAllowedUser();

      // サブコレクションも許可リストチェックを必須にする
      match /{document=**} {
        allow read, write: if isAllowedUser();
      }
    }
  }
}
